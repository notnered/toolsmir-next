generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                  Int      @id @default(autoincrement())
  image               String
  name                String
  availability        Int
  starsCount          Int?
  reviewsCount        Int?
  basePrice           Float
  discountPercentage  Float?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
